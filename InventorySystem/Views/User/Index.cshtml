@model List<UserLogin>
<h1>Users</h1>
<p>
    <a asp-controller="User"
       asp-action="Create"
       class="btn btn-success">
        Crear
    </a>
</p>
<form method="get" asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="searchName">Nombre del Usuario</label>
                <input type="text" name="searchName" class="form-control" placeholder="Buscar por nombre...">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="dateFilter">Ordenar por fecha</label>
                <select name="dateFilter" class="form-control" asp-items="ViewBag.dateFilter">
                    <option value="">-- Seleccione --</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="orderFilter">Tipo de orden</label>
                <select name="orderFilter" class="form-control" asp-items="ViewBag.orderFilter">
                    <option value="">-- Seleccione --</option>
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary form-control">Buscar</button>
            </div>
        </div>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>IdUser</th>
            <th>UserMail</th>
            <th>UserName</th>
            <th>CreationDate</th>
            <th>LastModificationDate</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>


                <td> @Html.DisplayFor(m => user.IdUser)</td>

                <td> @Html.DisplayFor(m => user.UserMail)</td>

                <td> @Html.DisplayFor(m => user.UserName)</td>

                <td> @Html.DisplayFor(m => user.CreationDate)</td>

                <td> @(user.LastModDate == null ? "Sin modificación" : Html.DisplayFor(m => user.LastModDate)) </td>

                <td> @(user.IdRol == null ? "Sin modificación" : Html.DisplayFor(m => user.IdRolNavigation.RolName))</td>

                <td>
                    <a asp-controller="User"
                       asp-action="Edit"
                       asp-route-id="@user.IdUser"
                       class="btn btn-primary">
                        Editar
                    </a>
                    <a asp-controller="User"
                       asp-action="Delete"
                       asp-route-id="@user.IdUser"
                       onclick="return confirmar()"
                       class="btn btn-danger">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        function confirmar() {
            return confirm("¿Esta seguro de eliminar el usuario?")
        }
    </script>
}
