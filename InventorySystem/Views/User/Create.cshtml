@model InventorySystem.Models.ViewModels.RegisterViewModel

<h1>Create User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreationDate" />
            <div class="form-group">
                <label asp-for="UserMail" class="control-label"></label>
                <input asp-for="UserMail" class="form-control">
                <span asp-validation-for="UserMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" type="password">
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.Rol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <p>
                <div class="d-flex align-items-center justify-content-between">

                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a href="/User/Index" class="btn btn-secondary ms-auto">Return</a>
                </div>
            </p>
        </form>
    </div>
</div>




