@model InventorySystem.Models.ViewModels.RegisterViewModel
<link href="~/css/Forms.css" rel="stylesheet" />
<div class="form-container">
    <h1 class="form-title">Edit User</h1>
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdUser" />
                <input type="hidden" asp-for="LastModDate" />
                <input type="hidden" asp-for="ConfirmPassword" />
                <input type="hidden" asp-for="UserPassword" />
                <div class="form-group">
                    <label asp-for="UserMail" class="control-label"></label>
                    <input asp-for="UserMail" class="form-control">
                    <span asp-validation-for="UserMail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdRol" class="control-label"></label>
                    <select asp-for="IdRol" class="form-control" asp-items="ViewBag.Rol"></select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>
                <p>
                    <div class="d-flex align-items-center justify-content-between">

                        <input type="submit" value="Edit" class="btn btn-primary" />

                        <a asp-controller="User"
                           asp-action="ChangePassword"
                           asp-route-id="@Model.IdUser"
                           class="btn btn-warning ms-auto text-light">
                            Change Password
                        </a>
                        <a href="/User/Index" class="btn btn-danger ms-auto">Return</a>
                    </div>
                </p>
            </form>
</div>