@{
    ViewData["Title"] = "Welcome";
}
<link href="~/css/Home.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<div class="container py-4">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Office Inventory System</h1>
            <div class="col-lg-8 mx-auto">
                <p class="lead mb-4">Manage your office's fixed assets with ease and efficiency</p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="/Product" class="btn action-btn action-btn-outline px-4 gap-3">Get Started</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <h2 class="text-center mb-4">Key Features</h2>
    <div class="row g-4 py-3 row-cols-1 row-cols-md-3">
        <!-- Inventory Management Card -->
        <div class="col">
            <div class="card feature-card shadow-sm p-4">
                <div class="d-flex justify-content-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-box-seam fs-2 feature-icon"></i>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h3 class="card-title fw-bold">Inventory Management</h3>
                    <p class="card-text">Record, view, and update your inventory information quickly and easily. Maintain detailed control of all assets.</p>
                    <a href="/Product" class="btn action-btn action-btn-primary mt-2">
                        View Inventory
                    </a>
                </div>
            </div>
        </div>

        <!-- User Management Card -->
        <div class="col">
            <div class="card feature-card shadow-sm p-4">
                <div class="d-flex justify-content-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-people fs-2 feature-icon"></i>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h3 class="card-title fw-bold">User Management</h3>
                    <p class="card-text">View, register, update, and delete users with access to the system. Assign specific permissions based on your team's needs.</p>
                    <a href="/User" class="btn action-btn action-btn-primary mt-2">
                        Manage Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Audit Logs Card -->
        <div class="col">
            <div class="card feature-card shadow-sm p-4">
                <div class="d-flex justify-content-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-journal-check fs-2 feature-icon"></i>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h3 class="card-title fw-bold">Audit Logs</h3>
                    <p class="card-text">Review a comprehensive history of all changes made to records, ensuring transparency and accountability in every operation.</p>
                    <a href="/ChangeLog" class="btn action-btn action-btn-primary mt-2">
                        View History
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>